{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode-wakatime",
  "repository": {
    "type": "git",
    "url": "https://github.com/angristan/opencode-wakatime.git"
  },
  "version": "1.2.2",
  "description": "WakaTime plugin for OpenCode - Track AI coding activity and time spent",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "opencode-wakatime": "bin/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "node scripts/bundle.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "opencode",
    "wakatime",
    "time-tracking",
    "ai",
    "coding",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@opencode-ai/plugin": "^1.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "semantic-release": "^25.0.3",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write"
    ]
  },
  "overrides": {
    "tar": ">=7.5.7"
  }
}
